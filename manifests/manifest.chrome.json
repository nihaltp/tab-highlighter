{
  "manifest_version": 3,
  "name": "Tab Highlighter: Github Tab Colorizer",
  "version": "1.1.0",
  "description": "Highlight your GitHub tabs with custom colors for better organization.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Tab Highlighter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://www.github.com/*", "https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.github.com/*", "https://github.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_end"
    }
  ]
}
