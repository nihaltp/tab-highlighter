{
  "manifest_version": 3,
  "name": "Tab Highlighter: Github Tab Colorizer",
  "version": "1.0.1",
  "description": "Highlight your GitHub tabs with custom colors for better organization.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Tab Highlighter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "src/popup/popup.html"
  },

  "permissions": ["storage"],

  "host_permissions": [
    "https://www.github.com/*/*/blob/*",
    "https://github.com/*/*/blob/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.github.com/*/*/blob/*", "https://github.com/*/*/blob/*"],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_sources": [
    {
      "resources": ["src/content.css"],
      "matches": ["https://www.github.com/*/*/blob/*", "https://github.com/*/*/blob/*"]
    }
  ]
}
